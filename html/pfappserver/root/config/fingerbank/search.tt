<form id='search' name="search" class="form-inline" action="[% c.uri_for(c.controller.action_for('search'),[scope]) %]" method="POST">
  <div class="pull-right">
    [% INCLUDE per_page_select.tt %]
    <input name="value" type="text" placeholder="String..." value="[% value | html %]"/>
    <button type="submit" class="btn btn-primary"><i class="icon-search icon-white"></i></button>
    <button type="reset" class="btn btn-primary">&times;</button>
  </div>
</form>
<br/>
