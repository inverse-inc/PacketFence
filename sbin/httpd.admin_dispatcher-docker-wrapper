#!/bin/bash

source /usr/local/pf/containers/systemd-service

name=httpd.admin_dispatcher

args=`base_args $name`
args="$args -v /usr/local/pf/conf:/usr/local/pf/conf -p 8890:8890 -p 8891:8891"

if ! [ -z "$DOCS_MOUNT" ]; then
  args="$args -v $DOCS_MOUNT:/usr/local/pf/docs"
fi

if ! [ -z "$HTML_MOUNT" ]; then
  args="$args -v $HTML_MOUNT:/usr/local/pf/html"
fi

run $name "$args"
